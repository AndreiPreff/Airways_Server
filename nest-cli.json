{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway_api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/gateway_api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/gateway_api",
  "projects": {
    "gateway_api": {
      "type": "application",
      "root": "apps/gateway_api",
      "entryFile": "main",
      "sourceRoot": "apps/gateway_api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway_api/tsconfig.app.json",
        "assets": [
          {
            "include": "./i18n/**/*",
            "watchAssets": true,
            "outDir": "dist/apps/gateway_api/src/i18n"
      }
    ]
      }
    },
    "gateway_chat": {
      "type": "application",
      "root": "apps/gateway_chat",
      "entryFile": "main",
      "sourceRoot": "apps/gateway_chat/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway_chat/tsconfig.app.json"
      }
    }
  }
}